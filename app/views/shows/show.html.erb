<!DOCTYPE html>
<html>
  <head>
    <title><%= @show["name"] %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
      body {
        background-color: #000;
        color: #fff;
      }
      .banner {
        max-height: 500px;
        object-fit: cover;
        width: 100%;
      }
      .episode, .actor {
        background-color: #111;
        border-radius: 10px;
        padding: 10px;
        margin-bottom: 10px;
      }
      .actor img {
        height: 100px;
        object-fit: cover;
        border-radius: 50%;
        margin-right: 10px;
      }
    </style>
  </head>
  <body>
    <div class="container mt-4">
      <a href="/" class="btn btn-danger mb-4">← Voltar</a>

      <h1><%= @show["name"] %></h1>
      <img src="<%= @show["image"] && @show["image"]["original"] %>" alt="<%= @show["name"] %>" class="banner mb-4">

      <p><%= @show["summary"]&.html_safe %></p>

      <h3 class="mt-5">Episódios</h3>
      <% @show["_embedded"]["episodes"].each do |episode| %>
        <div class="episode">
          <strong>Temporada <%= episode["season"] %>, Episódio <%= episode["number"] %>:</strong> <%= episode["name"] %>
        </div>
      <% end %>

      <h3 class="mt-5">Elenco</h3>
      <div class="row">
        <% @show["_embedded"]["cast"].each do |member| %>
          <div class="col-md-4 actor d-flex align-items-center">
            <img src="<%= member["person"]["image"] && member["person"]["image"]["medium"] %>" alt="<%= member["person"]["name"] %>">
            <strong><%= member["person"]["name"] %></strong>
          </div>
        <% end %>
      </div>
    </div>
  </body>
</html>
