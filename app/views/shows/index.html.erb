<h1 class="mb-4">Séries disponíveis</h1>

<div class="row row-cols-1 row-cols-md-3 g-4">
  <% @shows.each do |show| %>
    <div class="col">
      <div class="card h-100">
        <%= image_tag show.image, class: "card-img-top" if show.image.present? %>
        <div class="card-body">
          <h5 class="card-title"><%= show.name %></h5>
          <p class="card-text"><%= truncate(show.summary, length: 100) %></p>
          <%= link_to "Ver detalhes", show_path(show), class: "btn btn-danger" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
